<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_name_title"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:background="@android:color/holo_green_dark"
            android:text="Name"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/image_photo"
            app:layout_constraintStart_toStartOf="@id/image_photo"/>


        <TextView
            android:id="@+id/text_name"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:text="Johnny Lin"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="491dp"
            app:layout_constraintTop_toBottomOf="@+id/text_name_title"
            app:layout_constraintStart_toStartOf="@+id/text_name_title" />

        <TextView
            android:id="@+id/text_nickname_title"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:background="@android:color/holo_green_dark"
            android:text="Nick Name"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@id/text_name_title"
            app:layout_constraintEnd_toEndOf="@id/image_photo"/>

        <TextView
            android:id="@+id/text_nickname"
            android:layout_width="170dp"
            android:layout_height="30dp"
            android:text="Johnny"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="225dp"
            tools:layout_editor_absoluteY="491dp"
            app:layout_constraintTop_toTopOf="@+id/text_name"
            app:layout_constraintEnd_toEndOf="@+id/text_nickname_title"/>

        <TextView
            android:id="@+id/text_aboutme_title"
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:background="@android:color/holo_green_dark"
            android:text="About Me"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_name"
            app:layout_constraintEnd_toEndOf="@id/image_photo"/>

        <TextView
            android:id="@+id/text_aboutme"
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:text="Hi everyone !! I am Johnny. I am glad to attend the AppWorks School. "
            android:layout_marginStart="16dp"
            android:textAlignment="textStart"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/image_photo"
            app:layout_constraintEnd_toEndOf="@+id/text_aboutme_title"
            app:layout_constraintTop_toTopOf="@+id/text_aboutme_title" />

        <ImageView
            android:id="@+id/image_photo"
            android:layout_width="380dp"
            android:layout_height="400dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/photo"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>